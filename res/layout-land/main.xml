<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:weightSum="1">
	<LinearLayout android:id="@+id/linearLayout1"
		android:orientation="vertical" android:layout_width="180dp"
		android:layout_height="fill_parent">
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge"
			android:id="@+id/textView1" android:text="@string/rate_label"
			android:paddingLeft="5dp" />
		<EditText android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:id="@+id/editText1"
			android:inputType="numberDecimal" />
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge"
			android:id="@+id/textView2" android:paddingLeft="5dp" android:text="@string/final_label" />
		<EditText android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:id="@+id/editText2"
			android:inputType="numberDecimal" />
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge"
			android:id="@+id/textView3" android:paddingLeft="5dp" android:text="@string/price_label" />
		<EditText android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:id="@+id/editText3"
			android:inputType="numberDecimal" />
	</LinearLayout>
	<LinearLayout android:id="@+id/linearLayout2"
		android:layout_height="fill_parent" android:orientation="vertical"
		android:layout_width="240dp" android:weightSum="1">
		<TextView android:textAppearance="?android:attr/textAppearanceLarge"
			android:id="@+id/textView4" android:layout_height="214dp"
			android:paddingLeft="5dp" android:layout_weight="0.95"
			android:layout_width="fill_parent" android:text="@string/hint_label"
			android:fadeScrollbars="true" />
		<Button android:id="@+id/button1" android:layout_height="wrap_content"
			android:layout_gravity="right" android:layout_width="113dp"
			android:text="@string/calc_label" android:textSize="20sp" />
	</LinearLayout>

</LinearLayout>
